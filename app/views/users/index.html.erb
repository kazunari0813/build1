<div class="row">
  <div class="col-md-12">
    <div class="display-4">
      ユーザー一覧
    </div>
  </div>
</div>



<div class="row">
  <% @users.each do |user| %>
   	<div class="card">
   		<div class="row">
   			<div class="col-md-12">
   				<div class="card-image">
   					<figure class="post-image">
       				<%= link_to user_path(user) do %>
       				<%= attachment_image_tag user, :profile_image, fallback: "no_image.png" %>
       				<% end %>
       			</figure>
       		</div>
				</div>
			</div>
      <div class="row">
        <div class="col-md-12">
          <div class="user_name">
            <%=link_to user.name, user_path(user) %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="toukou">
        投稿数：<%= user.posts.count %>
      </div>
    </div>
      </div>
    </div>
  <% end %>
</div>