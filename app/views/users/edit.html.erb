<div class="row">
	<div class="col-md-6 mx-auto">
    <div class="form-group">
			<%= form_for(@user) do |f| %>
				<div class="field">
					<%= f.label :name, "ユーザー名", class: "label" %>
					<%= f.text_field :name, class: "form-control" %>
				</div>

				<div class="field">
