<% if @user_or_post == "1"%>
  <div class="row px-md-4">
    <% @users.each do |user| %>
      <div class="col-md-3 my-md-4">
        <div class="card">
          <div class="row">
            <div class="col-md-12 ml-md-1">
              <div class="card-image">
                <figure class="post-image">
                  <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :profile_image, size: "315x290", fallback: "no_image.png" %>
                  <% end %>
                </figure>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="user_name">
                <%=link_to user.name, user_path(user) %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="toukou">
                投稿数：<%= user.posts.count %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% elsif @user_or_post == "2" %>
  <div class="row p-md-3">
    <% @posts.each do |post| %>
      <div class="card m-md-3">
        <div class="row">
          <div class="col-md-12">
            <div class="card-image">
              <figure class="post-image">
                <%= link_to post_path(post) do %>
                  <%= attachment_image_tag post, :image, size: "440x300" %>
                <% end %>
              </figure>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 ml-md-3">
            <div class="profile_image">
              <%= attachment_image_tag post.user, :profile_image, size: "58x58", fallback: "no_image.png", class: "profile_image" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="user_name">
              <%= link_to post.user.name, user_path(post.user) %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-5 ml-md-5">
            コメント：<%= post.comments.count %>件
          </div>
          <div class="col-md-5 ml-md-3">
            <!-- いいね -->
            <% if user_signed_in? %>
              <%= render partial: 'favorites/favorite', locals: { post: post} %>
            <% else %>
              <%= link_to new_user_session_path do %>
                <i class="far fa-heart"></i>
                <%= post.favorites.count %>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
          </div>
          <div class="col-md-6">
            <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
<% end %>
<div class="row">
  <div class="col-md-5 ml-md-3">
  </div>
  <div class="col-md-4 ml-md-5">
<%= paginate @posts %>
</div>
</div>