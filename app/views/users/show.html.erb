<div class="row">
  <div class="col-md-12">
    <div class="display-4">
      ユーザー詳細
    </div>
  </div>
</div>

<div class="row p-md-5">
	<div class="col-md-3 ml-5">
		<figure class="user_image">
			<%= attachment_image_tag(@user, :profile_image, size: "300x300", fallback: "no_image.png") %>
		</figure>
	</div>
	<div class="col-md-5">
		<div class="row">
			<div class="col-md-6">
				<div class="user_name">
					<%= @user.name %>
				</div>
			</div>
			<div class="col-md-6">
				<div class="email">
					<% if current_user.id == @user.id %>
						<%= @user.email %>
					<% end %>
				</div>
			</div>
			<div class="row mt-5">
				<div class="col-md-12">
					<%= @user.profile %>
				</div>
			</div>
		</div>
	</div>
	<% if current_user.id == @user.id %>
		<div class="col-md-2 ml-5 mt-5">
			<div class="edit-btn">
				<%= link_to '編集', edit_user_path(@user), class: "btn btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class="row p-md-4">
	<% @posts.each do |post| %>
		<div class="card mx-md-4">
			<%= link_to post_path(post) do %>
      	<%= attachment_image_tag post, :image, size: "300x300", fallback: "no_image.png" %>
      <% end %>
  		<div class="card-body">
    		<p class="card-text">
    			<%= link_to post_path(post) do %>
            <span class="panel-icon">
              <i class="fas fa-book" aria-hidden="true"></i>
            </span>
            	この投稿を見る
          <% end %>
        </p>
  		</div>
  		<% if @user.id == current_user.id %>
  			<ul class="list-group list-group-flush">
    			<li class="list-group-item">
            <%= link_to edit_post_path(post) do %>
              <span class="panel-icon">
                <i class="fas fa-edit"></i>
              </span>
                この投稿を編集する
            <% end %>
        	</li>
    			<li class="list-group-item"><%= link_to post_path(post), method: :delete, data: {confirm: "削除しますか？"} do %>
          	<span class="panel-icon">
             	<i class="fas fa-trash"></i>
            </span>
            	この投稿を削除する
          	<% end %>
       		</li>
  			</ul>
  		<% end %>
		</div>
	<% end %>
</div>
<div class="row">
  <div class="col-md-5 ml-md-3">
  </div>
  <div class="col-md-2 ml-md-5">
    <%= paginate @posts %>
  </div>
</div>