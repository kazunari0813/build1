<div class="row">
  <div class="col-md-12">
    <div class="display-4">
      投稿一覧
    </div>
  </div>
</div>

<div class="row p-md-3">
  <% @posts.each do |post| %>
   	<div class="card m-md-3">
   		<div class="row">
   			<div class="col-md-12">
   				<div class="card-image">
   					<figure class="post-image">
       				<%= link_to post_path(post) do %>
       				<%= attachment_image_tag post, :image, size: "440x300" %>
       				<% end %>
       			</figure>
       		</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<div class="profile_image">
					<%= attachment_image_tag post.user, :profile_image, size: "58x58", fallback: "no_image.png", class: "profile_image" %>
				</div>
			</div>
			<div class="col-md-6">
				<div class="user_name">
					<%= link_to post.user.name, user_path(post.user) %>
				</div>
			</div>
  	</div>
  	<div class="row">
  		<div class="col-md-5 ml-md-3">
   			<time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新

          <% if post.favorited_by?(current_user) %>
            <%= link_to post_favorites_path(post), method: :delete do %>
              <i class="fas fa-heart" style="color: red;"></i>
              <%= post.favorites.count %>いいね
            <% end %>
          <% else %>
            <%= link_to post_favorites_path(post), method: :post do %>
              <i class="far fa-heart"></i>
                <%= post.favorites.count %>
            <% end %>
          <% end %>

    		</div>
  		</div>
		</div>
 	<% end %>
</div>