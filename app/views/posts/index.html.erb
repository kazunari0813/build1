<div class="row">
  <% @posts.each do |post| %>
   	<div class="card">
   		<div class="row">
   			<div class="col-md-12">
   				<div class="card-image">
   					<figure class="post-image">
       				<%= link_to post_path(post) do %>
       				<%= attachment_image_tag post, :image, size: "440x300" %>
       				<% end %>
       			</figure>
       		</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-2">
					<div class="profile_image">
					<%= attachment_image_tag post.user, :profile_image, size: "58x58", fallback: "no_image.png", class: "profile_image" %>
				</div>
			</div>
			<div class="col-md-6">
				<div class="user_name">
					<%= link_to post.user.name, user_path(post.user) %>
				</div>
			</div>
  	</div>
  	<div class="row">
  		<div class="col-md-5">
   			<time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
   				<% if current_user.already_favorited?(post) %>
          	<%= link_to post_favorites_path(post), method: :delete do %>
          	<i class="fas fa-heart" style="color: red;"></i>
          	<% end %>
            <%= post.favorites.count %>
          <% else %>
            <%= link_to post_favorites_path(post), method: :post do %>
            <i class="far fa-heart"></i>
            <% end %>
            <%= post.favorites.count %>
          <% end %>
    		</div>
  		</div>
		</div>
 	<% end %>
</div>