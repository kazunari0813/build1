<div class="row">
  <div class="col-md-12">
    <div class="display-4">
      投稿編集
    </div>
  </div>
</div>

<div class="row">
	<div class="col-md-6 mx-auto">
    <div class="form-group">
			<%= form_for(@post) do |f| %>
				<div class="field">
					<%= f.label :title, "タイトル", class: "label" %>
					<%= f.text_field :title, class: "form-control" %>
				</div>

				<div class="field">
					<%= f.label :body, "詳細", class: "label" %>
					<%= f.text_area :body, class: "form-control" %>
				</div>

				<div class="field">
					<%= f.label :image,"画像", class: "label" %>
					<%= f.attachment_field :image, class: "form-control" %>
				</div>

				<%= f.submit "更新", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>